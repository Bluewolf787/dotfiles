#! /usr/bin/env bash

#  ██████╗ ██╗   ██╗██╗ ██████╗██╗  ██╗██╗     ██╗███╗   ██╗██╗  ██╗███████╗
# ██╔═══██╗██║   ██║██║██╔════╝██║ ██╔╝██║     ██║████╗  ██║██║ ██╔╝██╔════╝
# ██║   ██║██║   ██║██║██║     █████╔╝ ██║     ██║██╔██╗ ██║█████╔╝ ███████╗
# ██║▄▄ ██║██║   ██║██║██║     ██╔═██╗ ██║     ██║██║╚██╗██║██╔═██╗ ╚════██║
# ╚██████╔╝╚██████╔╝██║╚██████╗██║  ██╗███████╗██║██║ ╚████║██║  ██╗███████║
#  ╚══▀▀═╝  ╚═════╝ ╚═╝ ╚═════╝╚═╝  ╚═╝╚══════╝╚═╝╚═╝  ╚═══╝╚═╝  ╚═╝╚══════╝


THEME_DIR="$HOME/.config/rofi/themes/"

# -----------------------------------------------------
# Theme Elements
# -----------------------------------------------------
prompt="Quick Links"
mesg="https:// Mail / GitHub / grep.app / Reddit / Hypr Docs / ArchWiki"

# -----------------------------------------------------
# Options
# -----------------------------------------------------
option_1="󰊫"
option_2=""
option_3="󰲋"
option_4=""
option_5=""
option_6=""

# -----------------------------------------------------
# Rofi CMD
# -----------------------------------------------------
rofi_cmd() {
  rofi -theme-str "window {width: 800px;}" \
    -theme-str "listview {colums: 7; lines: 1;}" \
    -theme-str 'textbox-prompt-colon {str: "";}' \
    -dmenu \
    -p "$prompt" \
    -mesg "$mesg" \
    -markup-rows \
    -theme $THEME_DIR/applet.rasi
}

# -----------------------------------------------------
# Pass variables to rofi dmenu
# -----------------------------------------------------
run_rofi() {
  echo -e "$option_1\n$option_2\n$option_3\n$option_4\n$option_5\n$option_6" | rofi_cmd
}

# -----------------------------------------------------
# Execute Command
# -----------------------------------------------------
run_cmd() {
  if [[ "$1" == '--opt1' ]]; then
		xdg-open 'https://mail.google.com/mail/u/0/#inbox'
	elif [[ "$1" == '--opt2' ]]; then
		xdg-open 'https://github.com/'
	elif [[ "$1" == '--opt3' ]]; then
		xdg-open 'https://grep.app/'
  elif [[ "$1" == '--opt4' ]]; then
		xdg-open 'https://www.reddit.com/'
	elif [[ "$1" == '--opt5' ]]; then
		xdg-open 'https://wiki.hyprland.org/'
	elif [[ "$1" == '--opt6' ]]; then
		xdg-open 'https://wiki.archlinux.org/'
	fi
}

# -----------------------------------------------------
# Actions
# -----------------------------------------------------
chosen="$(run_rofi)"
case ${chosen} in
  $option_1)
	run_cmd --opt1
    ;;
  $option_2)
	run_cmd --opt2
    ;;
  $option_3)
	run_cmd --opt3
    ;;
  $option_4)
	run_cmd --opt4
    ;;
  $option_5)
	run_cmd --opt5
    ;;
  $option_6)
	run_cmd --opt6
    ;;
esac

