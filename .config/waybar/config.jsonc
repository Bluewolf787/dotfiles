{
    "layer": "top",   
    "position": "top",
    "mod": "dock",
    "exclusive": true,
    "passthrough": false,
    "gtk-layer-shell": true,
    "height": 44,
    "modules-left": ["custom/launcher", "hyprland/workspaces", "cpu", "memory", "disk", "tray", "hyprland/window"],
    "modules-center": ["mpris"],
    "modules-right": ["custom/pacman", "network", "bluetooth", "pulseaudio","pulseaudio#microphone", "backlight", "battery", "clock"],
    "hyprland/window": {
        "format": "{}"
    },

    "hyprland/workspaces": {
        "format": "{icon}",
        "format-icons": {"1": "Óûï", "2": "Ôâ©", "3": "Û∞Öå", "4": "ÔÑ°", "5": "Û∞°®", "6": "Û∞çπ", "7": "Û∞çπ","8": "Û∞çπ", "9": "Û∞çπ"},
        "persistent-workspaces": {"*": 1, "*": 2, "*": 3, "*": 4}
    },

    "custom/launcher": {
        "format": "Û∞£á",
        "on-click": "~/.config/hypr/rofi/bin/launcher"
    },

    "tray": {
        "icon-size": 18,
        "spacing": 10
    },
    "cpu" : {
      "interval": 1,
      "format": "Ôíº  {}%"
    },
    "memory": {
      "interval": 1,
      "format": "Óâ¶  {}%"
    },
    "disk": {
