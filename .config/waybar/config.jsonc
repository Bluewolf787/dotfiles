        "format-linked": "Û∞àÄ {ifname} (No IP)",
        "format-disconnected": "Û∞§Æ",
        "format-alt": "{ifname}:{essid} {ipaddr}/{cidr}"
    },

    "bluetooth": {
	    "format": "",// "Ôäî {status}",
	    "format-disabled": "", // "Û∞Ç≤", // an empty format will hide the module
	    "format-connected": "Ôäî",
	    "tooltip-format": "{device_alias}",
	    "tooltip-format-connected": "Ôäî {device_enumerate}",
	    "tooltip-format-enumerate-connected": "{device_alias}"
    },
     
    "mpris": {
      "title-len": 40,
      "interval":1,
      "album-len":0,
      "max-len": 60,
      "format": "{player_icon} {dynamic}",
      "format-paused": "{player_icon} {dynamic}",
      "player-icons": {
        "default": "‚ñ∂",
        "mpv": "üéµ",
        "spotify": "ÔÜº",
        "firefox": "Ôâ©"
      },
      "status-icons": {
